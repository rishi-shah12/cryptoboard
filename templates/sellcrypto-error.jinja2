{% extends 'base-logged-in-1deep.jinja2' %}

{% block head %}


<style>

    .page-wrapper{
        height: 100vh;
        background:url('../../static/91002.jpg') ;
        background-position: 0px, -50px;
        background-size: 125%;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .title-wrapper p{
        font-size: 16px;
    }

    .form-signin {
  width: 100%;
  max-width: 330px;
  padding: 15px;
  margin: auto;
}
.form-signin .checkbox {
  font-weight: 400;
}
.form-signin .form-control {
  position: relative;
  box-sizing: border-box;
  height: auto;
  padding: 10px;
  font-size: 16px;
}
.form-signin .form-control:focus {
  z-index: 2;
}
.form-signin input[type="email"] {
  margin-bottom: -1px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}
.form-signin input[type="password"] {
  margin-bottom: 10px;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}

btn:hover{
    background-color: #371055;
}



</style>
{% endblock %}

<body>
{% block content %}
    <div class="page-wrapper" >
        <div class="title-wrapper">
          <div class="gap" style="padding-bottom: 3rem"></div>
          <h1 style="font-size: 32px; ">Oops!</h1>
          <p style="font-size: 16px; padding-bottom: 3rem">{{ message }}</p>
        </div>
        <div class="buttons" style="padding-top:3rem; text-align: center;">
            <a style="display: inline-block;" href="{{ url_for('sellCrypto', portfolio_id=portfolio_id) }}"><button class="btn" >Back to Sell</button></a>
        </div>
        </div>
    </div>
{% endblock %}
</body>

