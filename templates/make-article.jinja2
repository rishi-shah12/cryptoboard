{% extends 'base.jinja2' %}

{% block head %}


<style>

    .page-wrapper{
        height: 100vh;
        background:url('../static/91002.jpg') ;
        background-position: 0px, -50px;
        background-size: 125%;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .title-wrapper p{
        font-size: 16px;
    }

    .form-signin {
  width: 100%;
  max-width: 330px;
  padding: 15px;
  margin: auto;
}
.form-signin .checkbox {
  font-weight: 400;
}
.form-signin .form-control {
  position: relative;
  box-sizing: border-box;
  height: auto;
  padding: 10px;
  font-size: 16px;
}
.form-signin .form-control:focus {
  z-index: 2;
}
.form-signin input[type="email"] {
  margin-bottom: -1px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}
.form-signin input[type="password"] {
  margin-bottom: 10px;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}

btn:hover{
    background-color: #371055;
}



</style>
{% endblock %}

<body>
{% block content %}
    <div class="page-wrapper" >
        <div class="title-wrapper">
        <form class="form-signin" method="POST">
            <div class="gap" style="padding-bottom: 3rem"></div>
      <h1 style="font-size: 32px; ">Make Article</h1>
      <p style="font-size: 16px; padding-bottom: 3rem">Write an Article</p>
      <input  type="text" id="author" name="author" class="form-control" placeholder="Author" required autofocus>
      <input  type="text" id="title" name="title" class="form-control" placeholder="Title" required autofocus>
      <input  type="text" id="subtitle" name="subtitle" class="form-control" placeholder="Subtitle" required autofocus>
      <input  type="text" id="content" name="content" class="form-control" placeholder="Content" required autofocus>
        <a href="{{ url_for('makeArticle') }}"><button class="btn">Make</button></a>
    </form>
        </div>
    </div>
{% endblock %}
</body>

