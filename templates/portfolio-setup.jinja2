{% extends 'base-logged-in.jinja2' %}

{% block head %}


<style>

    .page-wrapper{
        height: 100vh;
        background:url('../static/91002.jpg') ;
        background-position: 0px, -50px;
        background-size: 125%;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .title-wrapper p{
        font-size: 16px;
    }

    .form-portfolio {
  width: 100%;
  max-width: 330px;
  padding: 15px;
  margin: auto;
}
.form-portfolio .checkbox {
  font-weight: 400;
}
.form-portfolio .form-control {
  position: relative;
  box-sizing: border-box;
  height: auto;
  padding: 10px;
  font-size: 16px;
}
.form-portfolio .form-control:focus {
  z-index: 2;
}
.form-portfolio input[type="email"] {
  margin-bottom: -1px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}
.form-portfolio input[type="password"] {
  margin-bottom: 10px;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}

btn:hover{
    background-color: #371055;
}



</style>
{% endblock %}

<body>
{% block content %}
    <div class="page-wrapper" >
        <div class="title-wrapper">
        <form class="form-portfolio" method="POST">
            <div class="gap" style="padding-bottom: 1rem"></div>
      <h1 style="font-size: 32px; ">Add A Portfolio</h1>
      <p style="font-size: 16px; padding-bottom: 1rem">Keeping Track of your Money </p>
      <input  type="text" id="portfolioName" name="portfolioName" class="form-control" placeholder="Portfolio Name" required autofocus>
      <input  type="text" name="cash" id="cash" class="form-control" placeholder="Cash In Portfolio" required>
      <input  type="text" id="currency" name="currency" class="form-control" placeholder="Currency of Portfolio" required autofocus>
      <input  type="text" id="institution" name="institution" class="form-control" placeholder="Institution Portfolio is Held At" required autofocus>
        <div class="spacing" style="padding-bottom: 2rem"></div>
        <a href="{{ url_for('portfolioCreate') }}"><button class="btn">Create</button></a>
    </form>
        </div>
    </div>

{% endblock %}
</body>

