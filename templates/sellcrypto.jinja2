{% extends 'base-logged-in-1deep.jinja2' %}

{% block head %}


<style>

    .page-wrapper{
        height: 100vh;
        background:url('../../static/91002.jpg') ;
        background-position: 0px, -50px;
        background-size: 125%;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .title-wrapper p{
        font-size: 16px;
    }

    .form-portfolio {
  width: 100%;
  max-width: 330px;
  padding: 15px;
  margin: auto;
}
.form-portfolio .checkbox {
  font-weight: 400;
}
.form-portfolio .form-control {
  position: relative;
  box-sizing: border-box;
  height: auto;
  padding: 10px;
  font-size: 16px;
}
.form-portfolio .form-control:focus {
  z-index: 2;
}
.form-portfolio input[type="email"] {
  margin-bottom: -1px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}
.form-portfolio input[type="password"] {
  margin-bottom: 10px;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}

btn:hover{
    background-color: #371055;
}



</style>
{% endblock %}

<body>
{% block content %}
    <div class="page-wrapper" >
        <div class="title-wrapper">
        <form class="form-portfolio" method="POST">
            <div class="gap" style="padding-bottom: 1rem"></div>
      <h1 style="font-size: 32px; ">Sell Crypto</h1>
      <p style="font-size: 16px; padding-bottom: 1rem">Enter a Transaction for the Sale of Cryptocurrency </p>
      <input  type="text" id="curr" name="curr" class="form-control" placeholder="Name of Crypto" required autofocus>
      <input  type="text" id="priceperunit" name="priceperunit" class="form-control" placeholder="Unit Price (Leave Blank for Current)" autofocus>
        <input  type="text" id="quantityTrans" name="quantityTrans" class="form-control" placeholder="Quantity Sold" required autofocus>
        <div class="spacing" style="padding-bottom: 2rem"></div>
        <a href="{{ url_for('sellCrypto', portfolio_id=portfolio_id) }}"><button class="btn">Add Transaction</button></a>
    </form>
        <a href="{{ url_for('portfolioView') }}"><button style="background-color: #606060;" class="btn">Back to Portfolios</button></a>
        <div class="spacing" style="padding-bottom: 20rem"></div>
    </div>

{% endblock %}
</body>

